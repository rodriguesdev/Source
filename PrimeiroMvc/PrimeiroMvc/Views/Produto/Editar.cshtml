@model PrimeiroMvc.Models.Produto
@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Produto</h4>
        <hr />
        @Html.HiddenFor(produto => produto.ID)
        @Html.ValidationSummary(true)
        <div class="validation-summary-errors">
            @Html.ValidationSummary("Erros:")
        </div>
        <div class="form-group">
            @Html.LabelFor(produto => produto.Nome, new { text = "Nome:", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(produto => produto.Nome)
                @Html.ValidationMessageFor(produto => produto.Nome)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(produto => produto.Preco, new {text = "Preço: ", @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(produto => produto.Preco)
                @Html.ValidationMessageFor(produto => produto.Preco)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(produto => produto.Datacriacao, new {text = "Data de Cadasstro: ", @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(produto => produto.Datacriacao)
                @Html.ValidationMessageFor(produto => produto.Datacriacao)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(produto => produto.Descricao, new {text = "Descrição: ", @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(produto => produto.Descricao)
                @Html.ValidationMessageFor(produto => produto.Descricao)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
