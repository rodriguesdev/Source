@{
    ViewBag.Title = "editar";
    var produto = this.Model as PrimeiroMvc.Models.Produto;
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Produto</h4>
        <hr />
        @Html.Hidden("hdfID", produto.ID)
        <div class="form-group">
            @Html.Label("txtNome", "Nome: ", new { text = "Nome:", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("txtNome", produto.Nome)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("txtPreco", "Preço: ", new {text = "Preço: ", @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.TextBox("txtPreco", produto.Preco)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("txtDataCriacao", "Data de Cadastro: ", new {text = "Data de Cadasstro: ", @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.TextBox("txtDataCriacao", produto.Datacriacao)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("txtDescricao", "Descrição: ", new {text = "Descrição: ", @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.TextArea("txtDescricao", produto.Descricao, 5, 20, null)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
