@{
    ViewBag.Title = "editar";
    var produto = this.Model as PrimeiroMvc.Models.Produto;
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Produto</h4>
        <hr />
        <input type="hidden" name="hdfID" id="hdfID" value="@produto.ID" />
        <div class="form-group">
            <label for="txtNome" class="control-label col-md-2">Nome:</label>
            <div class="col-md-10">
                <input type="text" name="txtNome" id="txtNome" value="@produto.Nome" />
            </div>
        </div>

        <div class="form-group">
            <label for="txtPreco" class="control-label col-md-2">Preço:</label>
            <div class="col-md-10">
                <input type="text" name="txtPreco" id="txtPreco" value="@produto.Preco" />
            </div>
        </div>

        <div class="form-group">
            <label for="txtDataCriacao" class="control-label col-md-2">Data de cadastro:</label>
            <div class="col-md-10">
                <input type="text" name="txtDataCriacao" id="txtDataCriacao" value="@produto.Datacriacao" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Descrição:</label>
            <div class="col-md-10">
                <textarea cols="20" id="txtDescricao" name="txtDescricao" rows="5">
                    @produto.Descricao
                </textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
